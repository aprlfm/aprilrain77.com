---
import Background from '../components/Background.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="April's personal website - trans girl who codes and listens to music" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <title>{title}</title>
    <noscript>
      <style>
        body * {
          display: none !important;
        }
        body::before {
          content: "JavaScript is required to view this site owo";
          display: flex !important;
          align-items: center;
          justify-content: center;
          position: fixed;
          top: 0;
          left: 0;
          width: 100vw;
          height: 100vh;
          background: #1B1E2B;
          color: #DFE2F0;
          font-family: 'IBM Plex Mono', 'Space Mono', monospace;
          font-size: 1.2rem;
          z-index: 9999;
        }
      </style>
    </noscript>
  </head>
  <body class="text-white">
    <div id="js-check" style="
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: #1B1E2B;
      color: #DFE2F0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'IBM Plex Mono', 'Space Mono', monospace;
      font-size: 1.2rem;
      z-index: 9999;
    ">
      Loading... owo
    </div>
    
    <div id="main-content" style="display: none;">
      <Background />
      <slot />
    </div>
    
    <script>
      const jsCheck = document.getElementById('js-check');
      const mainContent = document.getElementById('main-content');
      
      if (jsCheck && mainContent) {
        jsCheck.remove();
        mainContent.style.display = 'block';
      }
    </script>
  </body>
</html>

<style>
  html {
    font-family: 'IBM Plex Mono', 'Space Mono', monospace;
  }
</style>

<script>
  import '../styles/global.css';
</script>